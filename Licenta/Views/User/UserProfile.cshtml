    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="/assets/css/themify-icons.css" rel="stylesheet">

</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-background-color="black" data-active-color="danger">

            <!--
                Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
                Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="#" class="simple-text">
                        No Borders
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="/default/index">
                            <i class="ti-panel"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="/User/UserProfile">
                            <i class="ti-user"></i>
                            <p>My Profile</p>
                        </a>
                    </li>
                    <li style="left:25px;">
                        <i class="ti-map"></i>
                        <p>Country I want to work</p>
                        <select class="form-control border-input" id="countrydrp" style="width:215px;">
                            <option>Select Country</option>
                            <option>Romania</option>
                            <option>France</option>
                            <option>United Kingodm</option>
                            <option>Italy</option>
                        </select>

                    </li>
                    <li style="left:25px;">
                        <i class="ti-map"></i>
                        <p>Opportunities interest</p>
                        <select class="form-control border-input" id="opportunitydrp" style="width:215px;">
                            <option>Select status</option>
                            <option>Active search</option>
                            <option>I'm searching occasionally</option>
                            <option>Interested, but not searching</option>
                            <option>Not interested</option>
                        </select>



                    </li>

                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar bar1"></span>
                            <span class="icon-bar bar2"></span>
                            <span class="icon-bar bar3"></span>
                        </button>
                        <a class="navbar-brand" href="#">Welcome to your profile, Sabina !</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">

                            <li>
                                <a href="/default/index">
                                    <i class="ti-power-off"></i>
                                    <p>Logout</p>
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="card">
                            <div class="content">
                                <form id="target">
                                    <h4 class="title">Contact Data</h4>
                                    <br />
                                    @using (Html.BeginForm())
                                    {
                                        @Html.ValidationSummary(true, "", new { @style = "color:red" });
                                        <div class="row">


                                            <div class="col-md-6">
                                                <div class="form-group">

                                                    @Html.LabelFor(user => user.First_name)
                                                    @Html.TextBoxFor(user => user.First_name, new { @class = "form-control border-input", @placeholder = "Enter first name", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.First_name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Last_name)
                                                    @Html.TextBoxFor(user => user.Last_name, new { @class = "form-control border-input", @placeholder = "Enter last name", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Last_name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Email)
                                                    @Html.TextBoxFor(user => user.Email, new { @class = "form-control border-input", @placeholder = "Enter email", @disabled = true })

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Phone)
                                                    @Html.TextBoxFor(user => user.Phone, new { @class = "form-control border-input", @placeholder = "Enter phone", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Phone, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Address)
                                                    @Html.TextBoxFor(user => user.Address, new { @class = "form-control border-input", @placeholder = "Enter address", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Address, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.City)
                                                    @Html.TextBoxFor(user => user.City, new { @class = "form-control border-input", @placeholder = "Enter city", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.City, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Country)
                                                    @Html.TextBoxFor(user => user.Country, new { @class = "form-control border-input", @placeholder = "Enter country", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Country, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>



                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.AboutMe)
                                                    @Html.TextAreaFor(user => user.AboutMe, new { @class = "form-control border-input", @rows = "5", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.AboutMe, "", new { @class = "text-danger" })

                                                </div>
                                            </div>
                                        </div>

                                        <br />
                                        <br />
                                        <h4 class="title">Experience</h4>
                                        <br />

                                        for (int i = 0; i < Model.CandidateExperience.Count(); i++)
                                        {
                                        <div id="divExperience">
                                            <div class="row" style="margin-right:1px;">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateExperience[i].company_name)
                                                        @Html.TextBoxFor(user => user.CandidateExperience[i].company_name, new { @class = "form-control border-input", @disabled = true })
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateExperience[i].from_date)
                                                        @Html.TextBoxFor(user => user.CandidateExperience[i].from_date, new { @class = "form-control border-input", @disabled = true })
                                                    </div>
                                                </div>

                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateExperience[i].to_date)
                                                        @Html.TextBoxFor(user => user.CandidateExperience[i].to_date, new { @class = "form-control border-input", @disabled = true })
                                                    </div>
                                                </div>

                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateExperience[i].position)
                                                        @Html.TextBoxFor(user => user.CandidateExperience[i].position, new { @class = "form-control border-input", @disabled = true })
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-left:1px;">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].description)
                                                            @Html.TextAreaFor(user => user.CandidateExperience[i].description, new { @class = "form-control border-input", @rows = "5", @disabled = true })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                            <br />
                                            <br />
                                        }
                                        <div class="form-group">
                                            <label>Add more</label>
                                            <a href="#" id="addExperience">
                                                <i class="ti-plus"></i>
                                            </a>
                                        </div>

                                        <div class="clearfix"></div>
                                        <br />
                                        <br />



                                        <h4 class="title">Studies</h4>
                                        <br />
                                        <div class="row" style="margin-right:1px;">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>University</label>
                                                    <input type="text" class="form-control border-input" disabled placeholder="Ex: ASE Bucuresti" value="">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Section</label>
                                                    <input type="text" class="form-control border-input" disabled placeholder="Ex: Cibernetica " value="">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Diploma</label>
                                                    <input type="text" class="form-control border-input" disabled placeholder="Ex: Bachelor's degree " value="">
                                                </div>
                                            </div>


                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Year</label>
                                                    <select class="form-control border-input" disabled id="citydrp">
                                                        <option>--Select--</option>
                                                        <option>1</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                        <option>Finished</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row" style="margin-right:9px;">

                                            <div class="form-group" style="margin-left:15px;">
                                                <label>Add more</label>
                                                <a href="#">
                                                    <i class="ti-plus"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>

                                        <br />
                                        <br />
                                        <h4 class="title">Skills</h4>
                                        <br />
                                        <div class="row" style="margin-right:1px;">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Tech</label>
                                                    <input type="text" class="form-control border-input" disabled placeholder="Ex: JAVA" value="">
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Level</label>
                                                    <select class="form-control border-input" disabled id="citydrp">
                                                        <option>--Select--</option>
                                                        <option>Begginer</option>
                                                        <option>Intermediate</option>
                                                        <option>Advanced</option>
                                                        <option>Sensei</option>
                                                    </select>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row" style="margin-right:9px;">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Language</label>
                                                    <input type="text" class="form-control border-input" disabled placeholder="Ex: English" value="">
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Level</label>
                                                    <select class="form-control border-input" disabled id="citydrp">
                                                        <option>--Select--</option>
                                                        <option>Begginer</option>
                                                        <option>Intermediate</option>
                                                        <option>Advanced</option>
                                                        <option>Sensei</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group" style="margin-left:15px;">
                                                <label>Add more</label>
                                                <a href="#">
                                                    <i class="ti-plus"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                        <div class="text-center">
                                            @*@Html.ActionLink("Update", "UpdateCandidate", new { id = })*@
                                            <button type="submit" href="/User/UpdateCandidate" class="btn btn-info btn-fill">Update Profile</button>
                                            <button type="button" class="btn btn-info btn-fill" onclick="editProfile()">Edit Profile</button>

                                        </div>

                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


