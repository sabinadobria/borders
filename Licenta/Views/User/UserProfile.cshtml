@model Licenta.Models.CandidateProfile
@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Welcome to No Borders</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="/assets/css/animate.min.css" rel="stylesheet" />

    <!--  Paper Dashboard core CSS    -->
    <link href="/assets/css/paper-dashboard.css" rel="stylesheet" />

    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="/assets/css/demo.css" rel="stylesheet" />

    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="/assets/css/themify-icons.css" rel="stylesheet">

</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-background-color="black" data-active-color="danger">

            <!--
                Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
                Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="#" class="simple-text">
                        No Borders
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="/default/index">
                            <i class="ti-panel"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="/User/UserProfile">
                            <i class="ti-user"></i>
                            <p>My Profile</p>
                        </a>
                    </li>
                    <li style="left:25px;">
                        <i class="ti-map"></i>
                        <p>Country I want to work</p>
                        <select class="form-control border-input" id="countrydrp" style="width:215px;">
                            <option>Select Country</option>
                            <option>Romania</option>
                            <option>France</option>
                            <option>United Kingodm</option>
                            <option>Italy</option>
                        </select>

                    </li>
                    <li style="left:25px;">
                        <i class="ti-map"></i>
                        <p>Opportunities interest</p>
                        <select class="form-control border-input" id="opportunitydrp" style="width:215px;">
                            <option>Select status</option>
                            <option>Active search</option>
                            <option>I'm searching occasionally</option>
                            <option>Interested, but not searching</option>
                            <option>Not interested</option>
                        </select>



                    </li>

                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar bar1"></span>
                            <span class="icon-bar bar2"></span>
                            <span class="icon-bar bar3"></span>
                        </button>
                        <a class="navbar-brand" href="#">Welcome to your profile, Sabina !</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">

                            <li>
                                <a href="/default/index">
                                    <i class="ti-power-off"></i>
                                    <p>Logout</p>
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="card">
                            <div class="content">
                                <form id="target">
                                    <h4 class="title">Contact Data</h4>
                                    <br />
                                    @using (Html.BeginForm())
                                    {
                                        @Html.ValidationSummary(true, "", new { @style = "color:red" });
                                        <div class="row">


                                            <div class="col-md-6">
                                                <div class="form-group">

                                                    @Html.LabelFor(user => user.First_name)
                                                    @Html.TextBoxFor(user => user.First_name, new { @class = "form-control border-input", @placeholder = "Enter first name", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.First_name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Last_name)
                                                    @Html.TextBoxFor(user => user.Last_name, new { @class = "form-control border-input", @placeholder = "Enter last name", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Last_name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Email)
                                                    @Html.TextBoxFor(user => user.Email, new { @class = "form-control border-input", @placeholder = "Enter email", @disabled = true })

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Phone)
                                                    @Html.TextBoxFor(user => user.Phone, new { @class = "form-control border-input", @placeholder = "Enter phone", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Phone, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Address)
                                                    @Html.TextBoxFor(user => user.Address, new { @class = "form-control border-input", @placeholder = "Enter address", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Address, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.City)
                                                    @Html.TextBoxFor(user => user.City, new { @class = "form-control border-input", @placeholder = "Enter city", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.City, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Country)
                                                    @Html.TextBoxFor(user => user.Country, new { @class = "form-control border-input", @placeholder = "Enter country", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Country, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>



                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.AboutMe)
                                                    @Html.TextAreaFor(user => user.AboutMe, new { @class = "form-control border-input", @rows = "5", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.AboutMe, "", new { @class = "text-danger" })

                                                </div>
                                            </div>
                                        </div>

                                        <br />
                                        <br />
                                        <h4 class="title">Experience</h4>
                                        <br />

                                        for (int i = 0; i < Model.CandidateExperience.Count(); i++)
                                        {
                                            <div id="divExperience">
                                                <div class="row" style="margin-right:1px;">
                                                    <div class="col-md-3">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].company_name)
                                                            @Html.TextBoxFor(user => user.CandidateExperience[i].company_name, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].from_date)
                                                            @Html.TextBoxFor(user => user.CandidateExperience[i].from_date, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].to_date)
                                                            @Html.TextBoxFor(user => user.CandidateExperience[i].to_date, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].position)
                                                            @Html.TextBoxFor(user => user.CandidateExperience[i].position, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>
                                                    <div class="row" style="margin-left:1px;">
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateExperience[i].description)
                                                                @Html.TextAreaFor(user => user.CandidateExperience[i].description, new { @class = "form-control border-input", @rows = "5", @disabled = true })
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <br />
                                            <br />
                                        }
                                        <div class="form-group">
                                            <label>Add more</label>
                                            <a href="#" id="addExperience">
                                                <i class="ti-plus"></i>
                                            </a>
                                        </div>

                                        <div class="clearfix"></div>
                                        <br />
                                        <br />



                                        <h4 class="title">Studies</h4>
                                        <br />
                                        for (int i = 0; i < Model.CandidateStudies.Count(); i++)
                                        {
                                            <div id="divStudies">
                                                <div class="row" style="margin-right:1px;">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateStudies[i].School)
                                                            @Html.TextBoxFor(user => user.CandidateStudies[i].School, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateStudies[i].Section)
                                                            @Html.TextBoxFor(user => user.CandidateStudies[i].Section, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateStudies[i].Diploma)
                                                            @Html.TextBoxFor(user => user.CandidateStudies[i].Diploma, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateStudies[i].From_date)
                                                            @Html.TextBoxFor(user => user.CandidateStudies[i].From_date, new { @class = "form-control border-input", @disabled = true, @type = "time" })
                                                        </div>
                                                    </div>
                                                    <div class="row" style="margin-left:1px;">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateStudies[i].To_date)
                                                                @Html.TextBoxFor(user => user.CandidateStudies[i].To_date, new { @class = "form-control border-input", @disabled = true, @type = "time" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row" style="margin-left:1px;">
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateStudies[i].Description)
                                                                @Html.TextAreaFor(user => user.CandidateStudies[i].Description, new { @class = "form-control border-input", @rows = "5", @disabled = true })
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <br />
                                            <br />
                                        }
                                        <div class="form-group">
                                            <label>Add more</label>
                                            <a href="#" id="addStudies">
                                                <i class="ti-plus"></i>
                                            </a>
                                        </div>

                                        <div class="clearfix"></div>
                                        <br />
                                        <br />



                                        <div class="clearfix"></div>

                                        <br />
                                        <br />
                                        for (int i = 0; i < Model.CandidateTechnologies.Count(); i++)
                                        {
                                            <h4 class="title">Skills</h4>
                                            <br />
                                            <div class="row" style="margin-right:1px;">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateTechnologies[i].Name)
                                                        @Html.TextBoxFor(user => user.CandidateTechnologies[i].Name, new { @class = "form-control border-input", @disabled = true })
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateTechnologies[i].Level)
                                                        @Html.DropDownListFor(user => user.CandidateTechnologies[i].Level, new SelectList(
                                                                  new List<Object>{
                                                                       new { value = 0 , text = "--Select--"  },
                                                                       new { value = 1 , text = "Begginer" },
                                                                       new { value = 2 , text = "Intermediate"},
                                                                       new { value = 3 , text = "Advanced"}
                                                                    },
                                                                  "value",
                                                                  "text",
                                                                   2))

                                                    </div>
                                                </div>

                                            </div>
                                        }
                                            <div class="form-group" style="margin-left:15px;">
                                                <label>Add more</label>
                                                <a href="#" id="addTech">
                                                    <i class="ti-plus"></i>
                                                </a>
                                            </div>
                                        for (int i = 0; i < Model.CandidateLanguages.Count(); i++)
                                        {
                                        <div class="row" style="margin-right:9px;">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.CandidateLanguages[i].Name)
                                                    @Html.TextBoxFor(user => user.CandidateLanguages[i].Name, new { @class = "form-control border-input", @disabled = true })
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.CandidateLanguages[i].Level)
                                                    @Html.DropDownListFor(user => user.CandidateLanguages[i].Level, new SelectList(
                                                              new List<Object>{
                                                                   new { value = 0 , text = "--Select--"  },
                                                                   new { value = 1 , text = "Begginer" },
                                                                   new { value = 2 , text = "Intermediate"},
                                                                   new { value = 3 , text = "Advanced"}
                                                                },
                                                              "value",
                                                              "text",
                                                               2))

                                                </div>
                                            </div>
                                            </div>
                                            }
                                        <div class="form-group" style="margin-left:15px;">
                                            <label>Add more</label>
                                            <a href="#" id="addLanguage">
                                                <i class="ti-plus"></i>
                                            </a>
                                        </div>
                                        
                                        <div class="clearfix"></div>
                                        <div class="text-center">
                                            @Html.ActionLink("Update", "UpdateCandidate", new { id = Model.Id_candidate})
                                            <button type="submit" href="/User/UpdateCandidate" class="btn btn-info btn-fill">Update Profile</button>
                                            <button type="button" class="btn btn-info btn-fill" onclick="editProfile()">Edit Profile</button>

                                        </div>

                                        }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        

    </div>
</body>
</html>
<!--   Core JS Files   -->
<script src="/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Checkbox, Radio & Switch Plugins -->
<script src="/assets/js/bootstrap-checkbox-radio.js"></script>

<!--  Charts Plugin -->
<script src="/assets/js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="/assets/js/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<!-- Paper Dashboard Core javascript and methods for Demo purpose -->
<script src="/assets/js/paper-dashboard.js"></script>

<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
<script src="/assets/js/demo.js"></script>
<script>
    function editProfile() {
        $("#target input, textarea").prop("disabled", false);
        $("#target select, textarea").prop("disabled", false);
    }
</script>
<script>
    $(document).ready(function () {
        $("#addExperience").click(function () {
            $("#divExperience").append($("#divExperience").clone(true));

        });
    });
</script>

