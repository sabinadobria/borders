@model Licenta.Models.CandidateProfile
@{
    Layout = null;
    if (string.IsNullOrEmpty((string)Session["Recruiter_email"]))
    {
        Response.Redirect("~/Login/Login");
    }
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Welcome to No Borders</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="/assets/css/animate.min.css" rel="stylesheet" />

    <!--  Paper Dashboard core CSS    -->
    <link href="/assets/css/paper-dashboard.css" rel="stylesheet" />

    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="/assets/css/demo.css" rel="stylesheet" />

    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="/assets/css/themify-icons.css" rel="stylesheet">

</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="wrapper">
    
            <div>
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar bar1"></span>
                                <span class="icon-bar bar2"></span>
                                <span class="icon-bar bar3"></span>
                            </button>
                            <a class="navbar-brand" href="#">Details of @Model.First_name&nbsp;@Model.Last_name</a>
                        </div>
                      
                    </div>
                </nav>


                <div class="content" style="text-align:center;">
                    <div class="container-fluid">
                        <div class="row row-centered">
                            <div class="card">
                                <div class="content">
                                    @*<form id="target">*@
                                    <h4 class="title">Contact Data</h4>
                                    <br />
                                    <div id="target" style="text-align:center;">

                                        @Html.ValidationSummary(true, "", new { @style = "color:red" })
                                        <div class="row row-centered">
                                            <div class="col-md-3 col-centered">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.First_name)
                                                    @Html.TextBoxFor(user => user.First_name, new { @class = "form-control border-input", @placeholder = "Enter first name", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.First_name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-centered">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Last_name)
                                                    @Html.TextBoxFor(user => user.Last_name, new { @class = "form-control border-input", @placeholder = "Enter last name", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Last_name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row row-centered">
                                            <div class="col-md-3 col-centered">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Email)
                                                    @Html.TextBoxFor(user => user.Email, new { @class = "form-control border-input", @placeholder = "Enter email", @disabled = true })

                                                </div>
                                            </div>
                                            <div class="col-md-3 col-centered">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Phone)
                                                    @Html.TextBoxFor(user => user.Phone, new { @class = "form-control border-input", @placeholder = "Enter phone", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Phone, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row row-centered">
                                            <div class="col-md-6 col-centered">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Address)
                                                    @Html.TextBoxFor(user => user.Address, new { @class = "form-control border-input", @placeholder = "Enter address", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Address, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row row-centered">
                                            <div class="col-md-3 col-centered">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.City)
                                                    @Html.TextBoxFor(user => user.City, new { @class = "form-control border-input", @placeholder = "Enter city", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.City, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-centered">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.Country)
                                                    @Html.TextBoxFor(user => user.Country, new { @class = "form-control border-input", @placeholder = "Enter country", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.Country, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>



                                        <div class="row row-centered">
                                            <div class="col-md-6 col-centered">
                                                <div class="form-group">
                                                    @Html.LabelFor(user => user.AboutMe)
                                                    @Html.TextAreaFor(user => user.AboutMe, new { @class = "form-control border-input", @rows = "5", @disabled = true })
                                                    @Html.ValidationMessageFor(user => user.AboutMe, "", new { @class = "text-danger" })

                                                </div>
                                            </div>
                                        </div>

                                        <br />
                                        <br />
                                        <h4 class="title">Experience</h4>
                                        <br />

                                        @for (int i = 0; i < Model.CandidateExperience.Count(); i++)
                                        {
                                            <div id="divExperience">
                                                <div class="row" style="margin-right:1px;">
                                                    <div class="col-md-3 col-centered">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].company_name)
                                                            @Html.TextBoxFor(user => user.CandidateExperience[i].company_name, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3 col-centered">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].position)
                                                            @Html.TextBoxFor(user => user.CandidateExperience[i].position, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-right:1px;">
                                                    
                                                    <div class="col-md-3 col-centered">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].from_date)
                                                            @Html.TextBoxFor(user => user.CandidateExperience[i].from_date, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3 col-centered">
                                                        <div class="form-group">
                                                            @Html.LabelFor(user => user.CandidateExperience[i].to_date)
                                                            @Html.TextBoxFor(user => user.CandidateExperience[i].to_date, new { @class = "form-control border-input", @disabled = true })
                                                        </div>
                                                    </div>

                                              
                                                    <div class="row" style="margin-left:1px;">
                                                        <div class="col-md-6 col-centered">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateExperience[i].description)
                                                                @Html.TextAreaFor(user => user.CandidateExperience[i].description, new { @class = "form-control border-input", @rows = "5", @disabled = true })
                                                            </div>
                                                        </div>
                                                    </div>



                                                </div>
                                            </div>
                                            <br />
                                            <br />


                                        }

                                        <div class="clearfix"></div>
                                        <br />
                                        <br />



                                        <h4 class="title">Studies</h4>
                                        <br />
                                        @for (int i = 0; i < Model.CandidateStudies.Count(); i++)
                                        {
                                        <div id="divStudies">
                                            <div class="row" style="margin-right:1px; text-align:center">
                                                <div class="col-md-2 col-centered">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateStudies[i].school)
                                                        @Html.TextBoxFor(user => user.CandidateStudies[i].school, new { @class = "form-control border-input", @disabled = true })
                                                    </div>
                                                </div>
                                                <div class="col-md-2 col-centered">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateStudies[i].section)
                                                        @Html.TextBoxFor(user => user.CandidateStudies[i].section, new { @class = "form-control border-input", @disabled = true })
                                                    </div>
                                                </div>
                                                <div class="col-md-2 col-centered">
                                                    <div class="form-group">
                                                        @Html.LabelFor(user => user.CandidateStudies[i].diploma)
                                                        @Html.TextBoxFor(user => user.CandidateStudies[i].diploma, new { @class = "form-control border-input", @disabled = true })
                                                    </div>
                                                </div>
                                            </div>

                                                <div class="row row-centered" style="margin-right:1px; text-align:center">
                                                    
                                                    <div class="row" style="margin-left:1px;">
                                                        <div class="col-md-3 col-centered">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateStudies[i].from_date)
                                                                @Html.TextBoxFor(user => user.CandidateStudies[i].from_date, new { @class = "form-control border-input", @disabled = true })
                                                            </div>
                                                        </div>

                                                        <div class="col-md-3 col-centered">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateStudies[i].to_date)
                                                                @Html.TextBoxFor(user => user.CandidateStudies[i].to_date, new { @class = "form-control border-input", @disabled = true })
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <br />
                                            <br />


                                            }

                                            <div class="clearfix"></div>

                                            <br />
                                            <br />
                                            <h4 class="title">Skills</h4>
                                            <br />
                                            @for (int i = 0; i < Model.CandidateTechnologies.Count(); i++)
                                            {
                                                <div id="divLanguages">
                                                    <div class="row" style="margin-right:1px;">
                                                        <div class="col-md-3 col-centered">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateTechnologies[i].tech_name)
                                                                @Html.TextBoxFor(user => user.CandidateTechnologies[i].tech_name, new { @class = "form-control border-input", @disabled = true })
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3 col-centered">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateTechnologies[i].tech_level)
                                                                @Html.TextBoxFor(user => user.CandidateTechnologies[i].tech_level, new { @class = "form-control border-input", @disabled = true })
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <br />
                                                <br />
                                            }

                                            <div class="clearfix"></div>

                                            <br />
                                            <br />
                                            <h4 class="title">Languages</h4>
                                            <br />
                                            @for (int i = 0; i < Model.CandidateLanguages.Count(); i++)
                                            {
                                                <div id="divLanguages">
                                                    <div class="row" style="margin-right:1px;">
                                                        <div class="col-md-3 col-centered">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateLanguages[i].language)
                                                                @Html.TextBoxFor(user => user.CandidateLanguages[i].language, new { @class = "form-control border-input", @disabled = true })
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3 col-centered">
                                                            <div class="form-group">
                                                                @Html.LabelFor(user => user.CandidateLanguages[i].language_level)
                                                                @Html.TextBoxFor(user => user.CandidateLanguages[i].language_level, new { @class = "form-control border-input", @disabled = true })
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <br />
                                                <br />
                                            }
                                            <div class="clearfix"></div>
                                            <div class="text-center">

                                                <a href="/Candidates/CandidatesList" class="btn btn-info btn-fill button">Back to list</a>


                                            </div>
                                            @*</form>*@

                                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            </div>
    }
</body>
</html>
<!--   Core JS Files   -->
<script src="/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Checkbox, Radio & Switch Plugins -->
<script src="/assets/js/bootstrap-checkbox-radio.js"></script>

<!--  Charts Plugin -->
<script src="/assets/js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="/assets/js/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<style>
    .row-centered {
        text-align: center;
    }

    .col-centered {
        display: inline-block;
        float: none;
        /* reset the text-align */
        text-align: left;
        /* inline-block space fix */
        margin-right: -4px;
    }
</style>